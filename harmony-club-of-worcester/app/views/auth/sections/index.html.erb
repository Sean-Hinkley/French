<h1 class="text-center">Sections</h1>

<div class="row">
  <% @auth_sections.each do |section| %>
    <div class="col-lg-3 col-md-6 pb-3">
      <div class="accordion" id="<%= section.title.delete(" ") %>Accordian">
        <div class="accordion-item">
          <h2 class="accordion-header" id="<%= section.title.delete(" ") %>Heading">
            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#<%= section.title.delete(" ") %>Collapse" aria-expanded="false" aria-controls="<%= section.title.delete(" ") %>Collapse">
              <div>
                <%= section.title %>
                <% if section.visible %>
                <svg  xmlns="http://www.w3.org/2000/svg"  width="16"  height="16"  fill="currentColor"  class="bi bi-check-circle-fill text-success"  viewBox="0 0 16 16">
                  <path  d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zm-3.97-3.03a.75.75 0 0 0-1.08.022L7.477 9.417 5.384 7.323a.75.75 0 0 0-1.06 1.06L6.97 11.03a.75.75 0 0 0 1.079-.02l3.992-4.99a.75.75 0 0 0-.01-1.05z"/>
                </svg>
                <% else %>
                <svg  xmlns="http://www.w3.org/2000/svg"  width="16"  height="16"  fill="currentColor"  class="bi bi-x-circle-fill text-danger text-end"  viewBox="0 0 16 16">
                  <path  d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zM5.354 4.646a.5.5 0 1 0-.708.708L7.293 8l-2.647 2.646a.5.5 0 0 0 .708.708L8 8.707l2.646 2.647a.5.5 0 0 0 .708-.708L8.707 8l2.647-2.646a.5.5 0 0 0-.708-.708L8 7.293 5.354 4.646z"/>
                </svg>
                <% end %>
              </div>
            </button>
          </h2>
          <div id="<%= section.title.delete(" ") %>Collapse" class="accordion-collapse collapse" aria-labelledby="<%= section.title.delete(" ") %>Heading" data-bs-parent="#<%= section.title.delete(" ") %>Accordian">
            <div class="accordion-body">
              <p>Location: <%= section.location %></p>

              <p>Position: <%= section.position %></p>

              <% if section.visible %>
              <p>
                Visible: <svg  xmlns="http://www.w3.org/2000/svg"  width="16"  height="16"  fill="currentColor"  class="bi bi-check-circle-fill text-success"  viewBox="0 0 16 16">
                  <path  d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zm-3.97-3.03a.75.75 0 0 0-1.08.022L7.477 9.417 5.384 7.323a.75.75 0 0 0-1.06 1.06L6.97 11.03a.75.75 0 0 0 1.079-.02l3.992-4.99a.75.75 0 0 0-.01-1.05z"/>
                </svg>
              </p>
              <% else %>
              <p>
                Visible: <svg  xmlns="http://www.w3.org/2000/svg"  width="16"  height="16"  fill="currentColor"  class="bi bi-x-circle-fill text-danger"  viewBox="0 0 16 16">
                  <path  d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zM5.354 4.646a.5.5 0 1 0-.708.708L7.293 8l-2.647 2.646a.5.5 0 0 0 .708.708L8 8.707l2.646 2.647a.5.5 0 0 0 .708-.708L8.707 8l2.647-2.646a.5.5 0 0 0-.708-.708L8 7.293 5.354 4.646z"/>
                </svg>
              </p>
              <% end %>
              <div class="text-center pb-3">
                <%= link_to 'View', auth_section_path(section), class: "btn btn-outline-primary" %>
                <%= link_to 'Edit', edit_auth_section_path(section), class: "btn btn-outline-warning" %>
                <%= link_to 'Delete', auth_section_path(section), class: "btn btn-outline-danger", method: :delete, data: { confirm: 'Are you sure?' } %>
              </div>
              <% if !section.pages.empty? %>
              <div class="accordion accordion-flush" id="<%= section.title.delete(" ") %>pagesAccordion">
                <div class="accordion-item">
                  <h2 class="accordion-header" id="<%= section.title.delete(" ") %>pagesHeading">
                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#<%= section.title.delete(" ") %>pagesCollapse" aria-expanded="false" aria-controls="<%= section.title.delete(" ") %>pagesCollapse">
                      Pages
                    </button>
                  </h2>
                  <div id="<%= section.title.delete(" ") %>pagesCollapse" class="accordion-collapse collapse pb-3 text-center" aria-labelledby="<%= section.title.delete(" ") %>pagesHeading" data-bs-parent="#<%= section.title.delete(" ") %>pagesAccordion">
                    <% section.pages.each do |page| %>
                      <p class="text-center pt-1 pb-1"><%= page.title %></p>
                      <%@view=false%>
                      <%@edit=false%>
                      <%@delete=false%>
                      <%@user.roles.each do |r|%>

                        <%r.permissions.each do |p|%>

                          <%if p.permissible_type == "Page"%>

                            
                            <%if p.permissible_id== page.id%>

                              <%if p.canRead%>

                                <% @view = true %>

                              <%end%>

                              <%if p.canUpdate%>

                                <% @edit = true %>

                              <%end%>

                              <%if p.canDelete%>

                                <% @delete = true %>

                              <%end%>

                            
                            <%elsif p.allRecords == true%>

                              <%if p.canRead%>

                                <% @view = true %>

                              <%end%>

                              <%if p.canUpdate%>

                                <% @edit = true %>

                              <%end%>

                              <%if p.canDelete%>

                                <% @delete = true %>

                              <%end%>

                            <%end%>


                          <%end%>
                          
                        <%end%>
                        
                      <%end%>

                      <%if @view%>
                        <%= link_to 'View', auth_page_path(page), class: "btn btn-outline-primary" %>
                      <%end%>
                      <%if @edit%>
                        <%= link_to 'Edit', edit_auth_page_path(page), class: "btn btn-outline-warning" %>
                      <%end%>
                      <%if @delete%>
                        <%= link_to 'Delete', auth_page_path(page), class: "btn btn-outline-danger", method: :delete, data: { confirm: 'Are you sure?' } %>
                      <%end%>         
                      
                      <hr>
                    <% end %>
                  </div>
                </div>
              </div>
              <% end %> 
            </div>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>

<div class="text-center p-3">
  <%= link_to "Back to Control Panel", auth_site_panel_url, class: "btn btn-primary" %>
  <%= link_to 'New Section', new_auth_section_path, class: "btn btn-primary" %>
  <%= link_to 'New Page', new_auth_page_path, class: "btn btn-primary" %>
</div>