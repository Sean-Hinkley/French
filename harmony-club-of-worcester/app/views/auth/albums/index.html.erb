<div class="row">
  <% @auth_albums.each do |album| %>
    <div class="card border-primary mb-3 controlPanelCards w-25 m-3 col-3">
      	<div class="card-body">
        	<h3 class="card-title text-center"><%= album.title %></h3>
        	<hr>
			
			<% @photo = Photo.where(album_id: album.id).first %>
			<div class="">
				<%= image_tag "103177_see_watch_view_eye_icon.svg" %>
				<a href=""></a>
			</div>
			<% if @photo!=nil %>
				<% if @photo.image.attached? %>
					<%= image_tag @photo.image, class: "albumImage" %>
				<%end%>
			<% else %>
				<%= image_tag "empty.png", class: "albumImage" %>
			
			<%end%>
			<div class="row">
				<div class="col">
					<%= link_to 'Add Photo', new_auth_photo_path, class: "m-2 col btn btn-outline-primary float-end" %>
				</div>
			</div>
			<hr>
			<div class="row">
				<div class="col"><h3 class="text-center">Album</h3></div>
			</div>
			<div class="row mx-1">
				<%= link_to 'View', auth_album_path(album), class: "m-2 col btn btn-outline-primary" %>
				<%= link_to 'Edit', edit_auth_album_path(album), class: "m-2 col btn btn-outline-warning" %>
				<%= link_to 'Delete', auth_album_path(album), class: "m-2 col btn btn-outline-danger", method: :delete, data: { confirm: 'Are you sure?' } %>
			</div>
		</div>
	</div>
	<%end%>


</div>



<div class="text-center p-3 button">
  <%= link_to "Back to Control Panel", auth_site_panel_url, class: "btn btn-primary" %>
  <%= link_to 'New Album', new_auth_album_path, class: "btn btn-primary" %>
</div>